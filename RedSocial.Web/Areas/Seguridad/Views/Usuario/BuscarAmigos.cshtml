@model IEnumerable<RedSocial.Dominio.Seguridad.Usuario>
@using RedSocial.Dominio
@{
    
   ViewBag.nombre = "ghj"; 
    
}

<meta typeof="UTF-8" />  

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/estilos.css" rel="stylesheet" />
<script src="~/Scripts/jquery.js"></script>

<script src="~/Scripts/MisJs.js"></script>


<p>@ViewBag.nombre</p>

<table class="table">
    <tr>
        <th>
            @Html.Label(RecursosRedSocial.Nombres)
        </th>
       
        <th>
            @Html.Label(RecursosRedSocial.Foto)
        </th>
        <th></th>
     </tr>

  
@foreach (var item in Model) {
    <tr>
        <td>
            <img  style ="height:50px; width:50px;"src="../../../imagenes/@item.Foto"/>          
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            <input type="text" id="receptor" value="@item.Id" class="escoder"  style="visibility:hidden;"/>
        </td>
        
        <td>                   
            @Html.ActionLink("Enviar Solicitud", "EnviarSolicitud", "SolicitudAmistad", new { idereceptor = item.Id, nombreemi = @ViewBag.nombre, area = "Seguridad", @class = "btn btn-primary btn-sm" }, null) | 
            @Html.ActionLink("Ver Perfil", "VerPerfil", "Usuario", new { id = item.Id, area = "Seguridad"}, new{ @class = "btn btn-primary btn-sm" })
        </td>

    </tr>
}

</table>
